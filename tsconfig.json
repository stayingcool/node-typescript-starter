{
  "compilerOptions": {
    "target": "es6",
    "lib": ["ES2020"],
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
  },
  "include": [
    "**/*.ts",
  ]
}